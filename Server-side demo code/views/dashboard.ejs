<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Azure SQL Database Viewer</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
  <div class="container">
    <h1>Smart Building Monitoring</h1>
    
    <% if (error) { %>
      <div class="error">
        <h3>Error loading data:</h3>
        <p><%= error %></p>
      </div>
    <% } else { %>
      <h2>Select Building</h2>
      <ul class="building-list">
        <% ['Seaview1', 'Seaview2', 'Seaview3'].forEach(building => { %>
          <li>
            <a href="?building=<%= building %>">
              <%= building %>
            </a>
          </li>
        <% }); %>
      </ul>

      <% if (currentBuilding) { %>
        <h2><%= currentBuilding %> Sensor Data</h2>
        
        <% if (sensors && sensors.length > 0) { %>
          <div class="sensor-grid">
            <% sensors.forEach(sensor => { %>
              <div class="sensor-card">
                <h3><%= sensor.type %></h3>
                <div class="sensor-value">
                  <%= sensor.value %> <%= sensor.unit %>
                </div>
                <small>Updated: <%= sensor.timestamp %></small>
              </div>
            <% }); %>
          </div>

          <div class="chart-container">
            <h3>Historical Data</h3>
            <canvas id="sensorChart"></canvas>
          </div>
        <% } else { %>
          <p>No sensor data available for <%= currentBuilding %></p>
        <% } %>
      <% } else { %>
        <p>Please select a building to view data</p>
      <% } %>
    <% } %>
  </div>
</body>
</html>