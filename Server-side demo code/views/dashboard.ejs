<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Smart Building Monitoring</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .sensor-card {
            transition: transform 0.3s;
            cursor: pointer;
        }
        .sensor-card:hover {
            transform: translateY(-5px);
        }
        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
        }
        .sensor-icon {
            font-size: 24px;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">SmartBuildingMonitoring.ie</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="buildingDropdown" role="button" data-bs-toggle="dropdown">
                            <% if (buildings && buildings.length > 0) { %>
                                Select Building
                            <% } else { %>
                                No Buildings Available
                            <% } %>
                        </a>
                        <ul class="dropdown-menu" id="buildingSelector">
                            <% buildings.forEach(building => { %>
                                <li>
                                    <a class="dropdown-item" href="/dashboard?building=<%= building.BuildingID %>">
                                        <%= building.BuildingName %>
                                    </a>
                                </li>
                            <% }); %>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Dashboard -->
    <div class="container mt-4 dashboard-container">
        <!-- Building Title -->
        <div class="row mb-4">
            <div class="col-md-8">
                <h2 id="buildingTitle">
                    <% if (buildings && buildings.length > 0) { %>
                        Smart Building Dashboard
                    <% } else { %>
                        Please Add Buildings to Get Started
                    <% } %>
                </h2>
            </div>
            <div class="col-md-4 text-end">
                <small>Last updated: <%= new Date().toLocaleString() %></small>
            </div>
        </div>

        <!-- Sensor Cards -->
        <div class="row">
            <% if (sensors && sensors.length > 0) { %>
                <% sensors.forEach(sensor => { %>
                    <div class="col-md-3 mb-4">
                        <div class="card sensor-card h-100">
                            <div class="card-body">
                                <h5 class="card-title"><%= sensor.SensorName %></h5>
                                <p>Location: <%= sensor.Location || 'Unknown' %></p>
                                <p>Status: <%= sensor.IsActive ? 'Active' : 'Inactive' %></p>
                                <p>Type: <%= sensor.TypeName %></p>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="text-warning">No sensors available. Please add sensors to the system.</p>
            <% } %>
        </div>

        <!-- Historical Data Chart -->
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Historical Data</h4>
                    </div>
                    <div class="card-body">
                        <canvas id="sensorChart" height="300"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap and Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // Pass server-side data to the client
        const serverData = {
            chartData: <%- JSON.stringify(chartData || {}) %>
        };

        // Initialize Chart.js if data exists
        if (serverData.chartData.labels && serverData.chartData.datasets) {
            const ctx = document.getElementById('sensorChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: serverData.chartData,
                options: {
                    responsive: true,
                    scales: {
                        y: { beginAtZero: false }
                    }
                }
            });
        }
    </script>
</body>
</html>